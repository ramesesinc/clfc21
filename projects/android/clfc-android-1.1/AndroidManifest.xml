        <activity android:name="com.rameses.clfc.android.main.CollectionSheetInfoMainActivity"  android:screenOrientation="portrait"/>
        <activity android:name="com.rameses.clfc.android.main.CollectionSheetListActivity"  android:screenOrientation="portrait"/>
        
        <receiver
            android:name="com.rameses.clfc.android.receiver.ApplicationBroadcastReceiver"
            android:exported="true"
            android:enabled="true" >
            	<intent-filter>
        			<action android:name="android.provider.Telephony.SMS_RECEIVED" />
					<action android:name="android.intent.action.TIME_SET" />
					<action android:name="android.intent.action.BOOT_COMPLETED" />
					<action android:name="android.intent.action.ACTION_SHUTDOWN" />
            	    <action android:name="rameses.clfc.START_SERVICES" />
            	    <action android:name="rameses.clfc.STOP_SERVICES" />
            	    <action android:name="rameses.clfc.DESTROY_SERVICES" />
            	    <action android:name="rameses.clfc.TRACKER_START_SERVICE" />
            	    <action android:name="rameses.clfc.TRACKER_STOP_SERVICE" />
            	    <action android:name="rameses.clfc.PAYMENT_START_SERVICE" />
            	    <action android:name="rameses.clfc.REMARK_START_SERVICE" />
            	    <action android:name="rameses.clfc.CAPTURE_START_SERVICE" />
            	    <action android:name="rameses.clfc.REMARK_REMOVED_START_SERVICE" />
            	    <action android:name="rameses.clfc.VOID_REQUEST_START_SERVICE" />
            	</intent-filter>
        </receiver>
        
